<Window x:Class="ClassMassiv_lab8.ArrayInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassMassiv_lab8"
        mc:Ignorable="d"
        Title="ArrayInput" Height="200" Width="500">
    <Grid>
        <TextBlock Text="Введите элементы массива через запятую: " Width="300" Height="40" FontSize="15" Margin="0 0 0 90" TextAlignment="Center"/>
        <TextBox x:Name="arrayInputTextBox" Margin="10" Width="200" Height="40"/>
        <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,20" Width="75" Click="OK_Click"/>
    </Grid>
</Window>
